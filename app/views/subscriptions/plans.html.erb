<div class="container">
	<div class="row">
		 <% @plans.each_with_index do |plan, index| %>
			 <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
			<!-- PRICE ITEM -->
				<div class="panel price <%= plan_color[index][0]%>">
					<div class="panel-heading  text-center">
					<h3><%= plan.name.upcase %></h3>
					</div>
					<div class="panel-body text-center">
						<p class="lead" style="font-size:40px"><strong>$<%= plan.price%> / month</strong></p>
					</div>
					<ul class="list-group list-group-flush text-center">
					    <% plan.features.split("\n\n").each do |feature| %>
						  <li class="list-group-item"><i class="icon-ok text-danger"></i><%= feature %></li>
						<% end %>
					</ul>
					<div class="panel-footer">
						<a class="btn btn-lg btn-block <%= plan_color[index][1]%>" href="<%= new_subscription_path(plan)%>">BUY NOW!</a>
					</div>
				</div>
				<!-- /PRICE ITEM -->
			 </div>	
		<% end %>		
	</div>
            
</div>
